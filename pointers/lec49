//about memory allocation

#include<iostream>
using namespace std;
 
int main()
{
    //variable k liye heap memory allocation karo
    int *ptr=new int ;    // jha jha new dikh rha h wo sb dynamic memory allocation  h and vector also comes in dynamic memory allocation
    *ptr=5;   //value assign
    cout<<*ptr<<endl;

    float *ptr2= new float;
    *ptr2=3.6;
    cout<<*ptr2<<endl;

    int n;
    cout<<"enter the size of array";
    cin>>n;
    int *p=new int[n];

    //value daalo
    for(int i=0;i<n;i++)
    {
        p[i]=i+1;
    }

    //print the araay
    for(int i=0;i<n;i++)
    {
        cout<<p[i]<<endl;
    }

    //delete keyword ko use krna

    delete ptr;
    delete ptr2;
    delete[] p;

}