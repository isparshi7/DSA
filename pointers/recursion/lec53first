    //sum of squares of n number
    #include<iostream>
    using namespace std;
    int sqsum(int num,int n)
    {
        if(n==1)
        {
            return num;
        }
        return num*num+sqsum(num,n-1);
    }
    int main(){
        int num;
        
        cin>>num;
        cout<<sqsum(num,2);
        return 0;        
    }


